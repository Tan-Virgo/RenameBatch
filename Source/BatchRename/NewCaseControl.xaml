<UserControl x:Class="BatchRename.NewCaseControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Height="160" Width="350" Background="AliceBlue">
    <Canvas>
        <TextBlock Text="NewCase" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
        <ComboBox Name="newCaseCombobox" Height="25" Canvas.Left="10" Canvas.Top="37" Width="173">
            <ComboBoxItem Content="UpperCase" IsSelected="True"/>
            <ComboBoxItem Content="LowerCase"/>
            <ComboBoxItem Content="FirstUppercase"/>
        </ComboBox>
        <Button Width="110" Height="30" 
                Canvas.Left="202" Canvas.Top="101"
                Background="LightCyan" Click="btn_AddTo_OoperationList">
            <WrapPanel>
                <Image Source="Images/AddList.png" Width="28" Height="28"></Image>
                <TextBlock FontWeight="Bold"
                           Foreground="DarkOrange"
                           VerticalAlignment="Center"
                           Margin="8"> Add to List</TextBlock>
            </WrapPanel>
        </Button>
    </Canvas>
</UserControl>
